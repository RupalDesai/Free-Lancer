<link rel="stylesheet" href="/assets/css/user/auth.css">

<div class="container">
  <div id="workspace-list" class="row">
    <div class="col-sm-2 sidenav">
      <form>
        <h1> Apply Filter:</h1>
        <p><input id="cafe" type="checkbox">cafe</input></p>
        <p><input id="library" type="checkbox">library</input></p>
        <p><input id="office Space" type="checkbox">office Space</input></p>
        <p><input type="submit" value="Apply"></input></p>
      </form>
    </div>
    <div class="col-sm-10">
      <div class="col-sm-6">
        <form>
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Search for workspaces">
            <div class="input-group-btn">
              <button class="btn btn-default" type="submit">
                <i class="glyphicon glyphicon-search"></i>
              </button>
            </div>
          </div>
        </form>
      </div>
      <div class="col-sm-12 panel panel-default">
        <h1>Workspaces</h1>
        <div class="">
        {{#each workspace}}  
          <div class="col-sm-3 panel-body workspace">
            <h2><a href="/info/workspaceDetails/{{_id}}">{{name}}</a></h2>
            <p>{{email}}</p>
          </div>
        {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>