
<script src="/assets/js/jobs/jobFilterForm.js"></script>
<script src="/assets/js/jobs/jobSearchForm.js"></script>


  <div class="container-fluid">
    <div class="row content">
      <div class="col-sm-2 sidenav">
        <form class="techFilter" id="techFilter">
          <p> Apply Technology Filter:</p>
          <p><input id="java" type="checkbox">Java</input></p>
          <p><input id="python" type="checkbox">Python</input></p>
          <p><input id="html" type="checkbox">HTML</input></p>
          <p><input type="button" value="Apply" onclick="submitApply()"></input></p>
      </form>

    
      </div>
      <div class="col-sm-8 text-left">
        <h1> Search for Jobs:</h1>
        <form>
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Search" id="searchInput" oninput="searchListJob()"></input>
            <div class="input-group-btn">
              
            </div>
          </div>
        </form>
        
        
    
<!--//edit the jobs here-->
        <section>
          <h1>Jobs Available</h1>
              <ol id="companyList" class="companyList">
              {{#each company}}   
              
              <li><article class="company">
                  
              <h2><a href="/info/companyDetails/{{_id}}">{{name}}</a></h2>
                {{#each projects}}
                <h2><a href="/info/jobDetails/{{_id}}">{{position}}</a></h2>
                  
                {{/each}}
                </article></li> 
              {{/each}}
              
              </ol> 
        </section>
      </div>
    </div>
  </div>

  

